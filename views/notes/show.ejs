<%
const noteTitle = note.data.title || 'Note';
const noteText = note.data.text || '';
%>
<% const content = `
  <main>
    <h1>${noteTitle}</h1>
    <div id="note-container">
      <pre class="note-text">${noteText}</pre>
      <div class="note-links">
        <a href="/notes/${note.id}/raw">View raw</a>
        <a href="/notes/${note.id}/md">View as Markdown</a>
      </div>
      <button hx-delete="/notes/${note.id}" hx-target="#note-container" hx-swap="innerHTML">Delete Note</button>
    </div>
    <p><a href="/">Back to home</a></p>
  </main>
` %>
<%- include('../layout', { content, title: noteTitle }) %>
