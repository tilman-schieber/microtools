<%
const fileList = share.data.files || [];
const isSingle = fileList.length === 1;
%>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/public/style.css">
  <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>&#x1F527;</text></svg>">
  <script src="/public/htmx.min.js"></script>
  <script src="/public/qrcode.min.js"></script>
  <script>
    function renderQRCodes(root) {
      (root || document).querySelectorAll('.qrcode[data-url]').forEach(function(el) {
        if (el.dataset.rendered) return;
        var qr = qrcode(0, 'M');
        qr.addData(el.dataset.url);
        qr.make();
        el.innerHTML = qr.createSvgTag(3, 0);
        el.dataset.rendered = '1';
      });
    }
    document.addEventListener('DOMContentLoaded', function() { renderQRCodes(); });
    document.addEventListener('htmx:afterSwap', function(e) { renderQRCodes(e.detail.target); });
  </script>
</head>
<body>
  <main>
    <h1>Shared Files</h1>
    <% if (isSingle) { %>
      <div class="file-download">
        <p>Download your file:</p>
        <a href="/files/<%= share.id %>/download/<%= encodeURIComponent(fileList[0].name) %>" class="download-btn">
          <%= fileList[0].name %> (<%= fileList[0].sizeFormatted %>)
        </a>
      </div>
    <% } else { %>
      <div class="file-listing">
        <p><%= fileList.length %> files shared:</p>
        <ul class="file-list">
          <% fileList.forEach(file => { %>
            <li>
              <a href="/files/<%= share.id %>/download/<%= encodeURIComponent(file.name) %>"><%= file.name %></a>
              <span class="file-size">(<%= file.sizeFormatted %>)</span>
            </li>
          <% }); %>
        </ul>
        <a href="/files/<%= share.id %>/zip" class="download-btn">Download All as ZIP</a>
      </div>
    <% } %>

    <% if (share.expires_at) { %>
      <p class="hint">Expires on <%= new Date(share.expires_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
    <% } %>

    <div class="share-link">
      <p>Share this link:</p>
      <p><a href="<%= shareUrl %>"><%= shareUrl %></a></p>
      <div class="qrcode" data-url="<%= shareUrl %>"></div>
    </div>

    <div class="file-actions">
      <button hx-delete="/files/<%= share.id %>" hx-target="#delete-result" hx-swap="innerHTML" hx-confirm="Delete all shared files?">Delete Share</button>
      <div id="delete-result"></div>
    </div>

    <p><a href="/">Back to home</a></p>
  </main>
</body>
</html>
